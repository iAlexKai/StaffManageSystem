			// new Attendance_info();
			
		}
		
		if(e.getSource() == salary_info) {
			// new Salary_info();
			
		}
		
		if(e.getSource() == lesson_info) {
			// new Lesson_info();
			
		}
		
		if(e.getSource() == contract_info) {
			// new Contract_info();
			
		}
		
		if(e.getSource() == real_estate_info) {
